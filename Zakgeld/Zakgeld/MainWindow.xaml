        <Button x:Name="deleteButton" Content="Wissen" HorizontalAlignment="Left" Margin="373,114,0,0" VerticalAlignment="Top" Width="47" Click="deleteButton_Click"/>
        <Button x:Name="closeButton" Content="Afsluiten" HorizontalAlignment="Left" Margin="371,142,0,0" VerticalAlignment="Top" Click="closeButton_Click"/>
        <TextBox x:Name="resultTextBox" HorizontalAlignment="Left" Margin="128,199,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="272" Height="143"/>
        <Label Content="Weekgeld:" HorizontalAlignment="Left" Margin="13,86,0,0" VerticalAlignment="Top"/>
        <Label Content="Wekelijkse verhoging:" HorizontalAlignment="Left" Margin="13,103,0,0" VerticalAlignment="Top"/>
