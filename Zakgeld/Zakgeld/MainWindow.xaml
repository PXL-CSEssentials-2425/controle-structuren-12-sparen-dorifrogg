        xmlns:local="clr-namespace:Zakgeld"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="pocketTextBox" HorizontalAlignment="Left" Margin="159,88,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.788,1.826"/>
        <TextBox x:Name="weeklyRaiseTextBox" HorizontalAlignment="Left" Margin="159,111,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
